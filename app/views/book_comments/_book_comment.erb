  <% book.book_comments.each do |book_comment| %>
      <%= attachment_image_tag(book.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %>
      <%= book_comment.comment %>
      <% if book_comment.user == current_user %>
        
        <%= link_to "Destroy", book_book_comment_path(book_comment.book,book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
        
        <% end %>
      <br>
      <%= link_to user_path(book_comment.user) do %><%= book_comment.user.name %><% end %>
      <br>
        <% end %>